{% extends 'dashboard.html.twig' %}

{% block title %}PayPal orders{% endblock %}

{% block body %}
    <div class="ui segment">
        <h2 class="ui left floated header">PayPal orders</h2>
        <div class="ui right floated header">
        </div>
        <div class="ui clearing divider">
        </div>

        <table class="ui celled table">
            <thead>
            <tr>
                <th>PayPal ID</th>
                <th>Finalized</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{ order.paypalId }}</td>
                    <td class="collapsing">
                        {% if order.finalized == true %}
                            <i class="green check icon"></i>
                            <span>Yes</span>
                        {% else %}
                            <i class="red close icon"></i>
                            <span>No</span>
                        {% endif %}
                    </td>
                    <td class="collapsing">{{ order.createdAt | format_datetime('long') }}</td>
                    <td class="force-inline collapsing">
                        <a href="{{ path('app_paypal_order_show', {paypal_id: order.paypalId}) }}" class="ui button mini primary">View</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
