{% extends 'dashboard.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <div class="ui segment">
        <h2 class="ui left floated header">Products</h2>
        <div class="ui right floated header">
            <a href="{{ path('app_product_create') }}" class="button ui primary button">
                Create Product
            </a>
        </div>
        <div class="ui clearing divider">
        </div>

        <table class="ui celled table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Label</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Stock</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td class="collapsing">{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.label }}</td>
                    <td class="collapsing">{{ product.price | format_currency('EUR') }}</td>
                    <td>{{ product.description }}</td>
                    <td class="collapsing">{{ product.stock }}</td>
                    <td class="collapsing force-inline">
                        <a href="{{ path('app_product_edit', {product: product.id}) }}" class="mini ui button">
                            Edit
                        </a>
                        <form action="{{ path('app_product_delete', {product: product.id}) }}" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="mini ui red button">Delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
