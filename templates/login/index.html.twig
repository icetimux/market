{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="ui middle aligned center aligned grid container login-form">
        <div class="five wide column">
            <form action="{{ path('app_login') }}" method="POST" class="ui large form">
                <div class="ui stacked segment">
                    <div class="field {{ error ? 'error' : '' }}">
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                            <input type="text" name="_username" placeholder="E-mail address" value="{{ last_username }}">
                            <div data-lastpass-icon-root="true" style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"></div>
                        </div>
                    </div>
                    <div class="field {{ error ? 'error' : '' }}">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input type="password" name="_password" placeholder="Password">
                            <div data-lastpass-icon-root="true" style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"></div>
                        </div>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <input type="submit" class="ui fluid large teal button">
                </div>
            </form>

            {% if error %}
                <div class="ui error message">
                    <ul class="list">
                        <li>
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </li>
                    </ul>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
